<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe Collection</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container my-5">
        <h1 class="text-center mb-4">Recipe Collection</h1>
        <div class="text-right mb-4">
            <a href="/recipes/add" class="btn btn-primary">Add New Recipe</a>
        </div>
        <div class="list-group">
            <% recipes.forEach(recipe => { %>
            <div class="list-group-item mb-3">
                <h2 class="h4"><%= recipe.title %></h2>

                <!-- Ingredients -->
                <p><strong>Ingredients:</strong></p>
                <ul>
                    <% recipe.ingredients.split('\n').forEach(ingredient => { %>
                    <li><%= ingredient %></li>
                    <% }) %>
                </ul>

                <!-- Instructions -->
                <p><strong>Instructions:</strong></p>
                <ol>
                    <% recipe.instructions.split('\n').forEach(step => { %>
                    <li><%= step %></li>
                    <% }) %>
                </ol>

                <div class="d-flex justify-content-between">
                    <a href="/recipes/edit/<%= recipe._id %>" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/recipes/delete/<%= recipe._id %>" method="POST" class="ml-2">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>